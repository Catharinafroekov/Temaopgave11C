---
import "../styles/global.css";
import Popup from "./Popup.astro";
---
<body>
    <section class="flex">
    <h1>AskExperts</h1>
    <nav>
        <ol class="nav">
            <li> <a href="/">Home</a></li>
            <li> <a href="/casestudy">Case Study</a></li>
            <li> <a href="/team">Team</a></li>
            <li> <a href="/about">About</a></li>
        </ol>
    </nav>
    <Popup> </Popup>
</section>
</body>

<style>
    section{
        background-color: var(--background);
        backdrop-filter: blur(10.5px);
        padding: 38px;
        height: auto;
    }

    h1{
        color: #FFF;
font-size: 30px;
line-height: 1.05%;
    }

    p{
    color: #181818;
}

    li{
        list-style: none;
    }

    a{
        color: #FFF;
        text-decoration: none;
    }

a, p{
    font-family: "Lato";
font-size: 17.728px;
}

    .flex{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
    }

    .nav{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
}


 @media (max-width: 768px) {
        section {
            padding: 15px;
        }

        h1 {
            font-size: 20px;
        }

        .flex {
            flex-direction: column;
            align-items: center;
        }

        .nav {
            gap: 10px;
        }

        .popup-container {
            margin-top: 10px;
        }
    }

</style>