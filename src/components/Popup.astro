---
import "../styles/global.css";
---

<body>
  <button popovertarget="popup">Login</button>
    <div popover id="popup">
      <section>
    <h1>Dashboard Login</h1>
    <div>
    <form action="#">
        <label for="mail">
        <input type="text" value="Enter Email">
    </label>
    </form>
</div><div>
    <form action="#">
        <label for="password">
        <input type="text" value="Enter Password">
    </label>
    </form>
</div>
<div>
    <button>
        <a href="#">Go to dashboard</a>
    </button>
</div>
</section>
</body>
<style>

    #popup{
      display: none;
    }

    div{
      background-color: var(--background);
      border-radius: 20px;
    }
section{
    padding: 40px 60px 60px 60px;
        background-color: var(--background);
        border-radius: 20px;
        display: flex; 
    flex-direction: column; 
        align-items: center;  
    justify-content: center; 
    gap: 30px;
    width: fit-content;
}

    h1{
        color: #FFF;
text-align: center;
font-size: 45px;
font-weight: 700;
line-height: 1.16%;
margin-bottom: 30px;
    }


    input{
        color: #595566;
font-family: "Cabin";
font-size: 16px;
line-height: 1.16%;
padding: 24px 33px;
    }

    form{
        background-color: #FFF;
        border-radius: 54px;
    }

    button{
        background-color: var(--primary);
        border-radius: 42px;
        padding: 15px 56px;
    }

    a{
        text-decoration: none;
        color: var(--h1)
    }
    @media (max-width: 768px) {
    section {
      padding: 20px;
      gap: 15px;
    }

    h1 {
      font-size: 20px;
      margin-bottom: 15px;
    }

    input {
      font-size: 14px;
      padding: 10px 15px;
    }

    button {
      padding: 10px 20px;
    }
  }
</style>